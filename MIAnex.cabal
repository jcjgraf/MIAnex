cabal-version:       >=1.10
-- Initial package description 'Gitannex-Client-II.cabal' generated by
-- 'cabal init'.  For further documentation, see
-- http://haskell.org/cabal/users-guide/

name:                MIAnex
version:             0.0.0.1
-- synopsis:
-- description:
-- bug-reports:
-- license:
license-file:        LICENSE
author:              Jean-Claude Graf
maintainer:          mail@jeanclaudegraf.ch
-- copyright:
-- category:
build-type:          Simple
extra-source-files:  CHANGELOG.md, README.md

executable mia
    main-is:             Main.hs
    other-modules:
        Command
        Command.Import
        Command.Activate
        Command.Deactivate
        Command.List
        Command.Test
        Config
        Git
        Helper
    -- other-extensions:
    ghc-options:
        -Wall
        -Wincomplete-uni-patterns
        -Wincomplete-record-updates
        -Wmonomorphism-restriction
        -Wmissing-local-signatures
        -Wmissing-exported-signatures
        -Wmissing-export-lists
        -Wmissing-import-lists
        -Wmissing-home-modules
        -Widentities
        -Wredundant-constraints
        -Wpartial-fields
        -Wmissed-specialisations
        -Wcpp-undef
        -Wunused-packages
        -Wunused-type-patterns
    build-depends:
        base,
        process,
        directory,
        optparse-applicative,
        text,
        time,
        ini
    hs-source-dirs:      .
    default-language:    Haskell2010
